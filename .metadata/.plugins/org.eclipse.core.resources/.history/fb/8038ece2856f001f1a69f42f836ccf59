document.addEventListener('DOMContentLoaded', function () {
    const resenhaId = obterIdResenha(); // Função fictícia que obtém o ID da resenha
    if (resenhaId) {
        carregarDadosResenha(resenhaId);
    } else {
        console.error('ID da resenha não encontrado');
    }
});

function carregarDadosResenha(id) {
    fetch(`/back-end/excluirEditar?id=${id}`)
        .then(response => {
            if (!response.ok) {
                throw new Error(`Erro ao carregar os dados da resenha: ${response.statusText}`);
            }
            return response.json();
        })
        .then(data => {
            // Preenche os campos com os dados recebidos
            document.getElementById('urlFoto').src = data.url_foto || 'Imagem não disponível';
            document.getElementById('titulo').innerText = data.titulo || 'Título não encontrado';
            document.getElementById('idadeLeitura').innerText = data.idade_leitura || 'Idade não disponível';
            document.getElementById('livro').innerText = data.livro || 'Livro não encontrado';
            document.getElementById('autor').innerText = data.autor || 'Autor não encontrado';
            document.getElementById('tradutor').innerText = data.tradutor || 'Tradutor não encontrado';
            document.getElementById('generos').innerText = data.generos || 'Gêneros não disponíveis';
            document.getElementById('idioma').innerText = data.idioma || 'Idioma não encontrado';
            document.getElementById('editora').innerText = data.editora || 'Editora não encontrada';
            document.getElementById('numeroPaginas').innerText = data.numero_paginas || 'Número de páginas não disponível';
            document.getElementById('fraseDestaque').innerText = data.frase_destaque || 'Frase não disponível';
            document.getElementById('conteudoResenha').innerText = data.conteudo_resenha || 'Resenha não disponível';
        })
        .catch(error => {
            console.error('Erro ao carregar os dados da resenha:', error);
        });
}

function obterIdResenha() {
    // Esta função deve retornar o ID da resenha que você deseja carregar.
    // Pode ser por meio da URL ou outra lógica.
    const params = new URLSearchParams(window.location.search);
    return params.get('id');
}




