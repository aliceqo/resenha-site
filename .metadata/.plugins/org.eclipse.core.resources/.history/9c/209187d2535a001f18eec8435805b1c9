/* Adicionando media queries para dispositivos móveis e tela dividida */

/* Tela pequena (celular) */
@media only screen and (max-width: 480px) {
    /* Ajustes para tela pequena */
    header {
      padding: 10px;
    }
    nav ul li {
      margin-right: 10px;
    }
    .banner {
      padding: 20px 10px;
    }
    .livros, .resenhas {
      grid-template-columns: repeat(2, 1fr);
    }
    .livro, .resenha {
      margin: 0 10px 20px;
    }
  }
  
  /* Tela média (tablet) */
  @media only screen and (min-width: 481px) and (max-width: 768px) {
    /* Ajustes para tela média */
    header {
      padding: 15px;
    }
    nav ul li {
      margin-right: 15px;
    }
    .banner {
      padding: 30px 15px;
    }
    .livros, .resenhas {
      grid-template-columns: repeat(3, 1fr);
    }
    .livro, .resenha {
      margin: 0 15px 30px;
    }
  }
  
/*Tela dividia do computador*/
@media only screen and (min-width: 767px) and (max-width: 1024px) {
    header {
        background-image: url('../imagens/fundo/fundo2.png');
        padding: 20px;
    }
    nav ul li {
        margin-right: 20px;
    }
    .banner {
