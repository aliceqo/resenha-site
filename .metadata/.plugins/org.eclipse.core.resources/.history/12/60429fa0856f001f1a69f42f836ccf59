
function carregarDadosResenha(resenhaId) {
   
    fetch(`/back-end/excluirEditar?id=${resenhaId}`)
        .then(response => {
            
            if (!response.ok) {
                console.error("Erro ao buscar os dados da resenha:", response.status, response.statusText);
                throw new Error("Erro ao carregar os dados da resenha");
            }
            
            return response.json();
        })
        .then(data => {
            // Preenche os campos da página com os dados retornados do servlet
            document.getElementById('url_foto').src = data.url_foto;
            document.getElementById('titulo').value = data.titulo;
            document.getElementById('idade_leitura').value = data.idade_leitura;
            document.getElementById('livro').value = data.livro;
            document.getElementById('autor').value = data.autor;
            document.getElementById('tradutor').value = data.tradutor;
            document.getElementById('generos').value = data.generos;
            document.getElementById('idioma').value = data.idioma;
            document.getElementById('editora').value = data.editora;
            document.getElementById('numero_paginas').value = data.numero_paginas;
            document.getElementById('frase_destaque').value = data.frase_destaque;
            document.getElementById('conteudo_resenha').value = data.conteudo_resenha;
        })
        .catch(error => {
            
            console.error("Erro ao carregar os dados da resenha:", error);
            document.getElementById('erro').innerText = "Erro ao carregar os dados da resenha";
        });
}

const urlParams = new URLSearchParams(window.location.search);
const resenhaId = urlParams.get('id');
if (resenhaId) {
    carregarDadosResenha(resenhaId);
} else {
    document.getElementById('erro').innerText = "ID da resenha não encontrado";
}



    // Enviar dados para editar uma resenha
