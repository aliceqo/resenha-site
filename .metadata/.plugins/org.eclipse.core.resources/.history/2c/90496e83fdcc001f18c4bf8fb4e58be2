package resenha;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import model.DAO;

@WebServlet("/atualizarDestaque")
public class atualizarDestaque extends HttpServlet {
    private static final long serialVersionUID = 1L;

    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String livroId = request.getParameter("livroId");
        String posicao = request.getParameter("posicao");

        // Verificando se os parâmetros foram passados corretamente
        if (livroId == null || livroId.isEmpty() || posicao == null || posicao.isEmpty()) {
            response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
            response.getWriter().write("Parâmetros inválidos.");
            return;
        }

        // Usando seu DAO para obter a conexão
        DAO dao = new DAO();
        try (Connection conn = dao.conectar()) {
            // Verificando a conexão
            if (conn == null) {
                response.setStatus(HttpServletResponse.SC_INTERNAL_SERVER_ERROR);
                response.getWriter().write("Falha na conexão com o banco de dados.");
                return;
            }

            // Atualizar a posição no banco de dados
            String sql = "UPDATE resenhas SET destaque_posicao = ? WHERE id = ?";
            try (PreparedStatement stmt = conn.prepareStatement(sql)) {
                // Verificando se posicao é um número inteiro
                try {
                    int posicaoInt = Integer.parseInt(posicao); // Convertendo para inteiro
                    stmt.setInt(1, posicaoInt); // Usando setInt para valores numéricos
                } catch (NumberFormatException e) {
                    // Se posicao não for numérico, retornar erro
                    response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
                    response.getWriter().write("Posição inválida. Deve ser um número inteiro.");
                    return;
                }

                stmt.setString(2, livroId); // Atualizando com livroId

                int rowsUpdated = stmt.executeUpdate();

                if (rowsUpdated > 0) {
                    response.setStatus(HttpServletResponse.SC_OK);
                    response.getWriter().write("Destaque atualizado com sucesso.");
                } else {
                    response.setStatus(HttpServletResponse.SC_BAD_REQUEST);
                    response.getWriter().write("Erro ao atualizar destaque.");
                }
            }
        } catch (Exception e) {
            e.printStackTrace(); // Para logar o erro
            response.setStatus(HttpServletResponse.SC_INTERNAL_SERVER_ERROR);
            response.getWriter().write("Erro no servidor: " + e.getMessage());
        }
    }
}
