/* Para telas com largura entre 767px e 1024px (geralmente tablets) */
@media only screen and (min-width: 767px) and (max-width: 1024px) {
    header {
        background-image: url('../imagens/fundo/fundo2.png');
        background-size: cover; 
        background-position: center;
        padding: 20px; /* Mantendo o padding adequado para tablets */
    }

    .informacoes {
        margin-left: 15px; /* Margem para melhor espaçamento */
        width: 86%; /* Largura do conteúdo, ajustada para telas médias */
        padding-left: 20px; 
        padding-top: 20px;
    }

    .resenha {
        margin-left: 15px;
        margin-top: 850px; /* Ajuste de margem superior (pode ser ajustado conforme necessidade) */
        width: 82%; /* Largura da resenha */
    }

    .resenha h1 {
        font-size: 30px; /* Tamanho da fonte ajustado para telas médias */
    }
}

/* Para telas com largura máxima de 410px (geralmente celulares) */
@media only screen and (max-width: 420px) {
    header {
        background-image: url('../imagens/fundo/fundo2.png');
        background-size: cover; 
        background-position: center;
        padding: 30px; /* Ajuste do padding para telas pequenas */
    }

    .informacoes {
        margin-left: 10px; /* Menor margem para caber em telas pequenas */
        width: 100%; /* Largura 100% para ocupar toda a tela */
        padding-left: 10px; /* Ajuste do padding */
        padding-top: 15px; /* Ajuste do padding superior */
    }

    .resenha {
        margin-left: 10px; /* Ajuste da margem */
        margin-top: 50px; /* Ajuste da margem superior */
        width: 100%; /* Largura 100% para a resenha ocupar toda a tela */
    }

    .resenha h1 {
        font-size: 22px; /* Fonte menor para telas pequenas */
    }
}
