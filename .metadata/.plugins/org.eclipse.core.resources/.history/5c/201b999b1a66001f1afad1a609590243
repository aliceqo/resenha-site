document.getElementById('form-frase-destaque').addEventListener('submit', function(event) {
  event.preventDefault(); 
	const fraseDestaque = document.getElementById('frase_destaque').value;

  fetch('back-end/excluirEditar', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ frase_destaque: fraseDestaque }),
  })
  .then(response => response.json())
  .then(data => {
    console.log('Frase de Destaque salva:', data);
  })
  .catch(error => {
    console.error('Erro ao salvar a Frase de Destaque:', error);
  });
});

document.getElementById('form-conteudo-resenha').addEventListener('submit', function(event) {
  event.preventDefault(); // Evita o envio padrão do formulário

  const conteudoResenha = document.getElementById('conteudo_resenha').value;

  // Envio dos dados para o backend (exemplo com fetch)
  fetch('/salvar-conteudo-resenha', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ conteudo_resenha: conteudoResenha }),
  })
  .then(response => response.json())
  .then(data => {
    console.log('Conteúdo da Resenha salvo:', data);
  })
  .catch(error => {
    console.error('Erro ao salvar o Conteúdo da Resenha:', error);
  });
});
